/* pages/modal/tab.wxss */

.tab {
    width: 100%;
    height: 94rpx;
    border-bottom: 1px solid #edeff1;
    background-color: #fff;
    top: 0;
    z-index: 8;
    display: flex;
    justify-content: space-around;
}
.tab_item {
    font-size: 34rpx;
    position: relative;
    height: 94rpx;
    line-height: 94rpx;
    padding: 0 20rpx;
    text-align: center;
    color: #909090;
    width: 25%;
}
.active {
    color: #f43939;
    border-bottom: 2px solid #f43939;
}