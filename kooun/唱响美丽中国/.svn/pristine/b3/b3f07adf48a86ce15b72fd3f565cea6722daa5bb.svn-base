

<!-- 导航栏 -->
<view class='frame'>
  <view class='frame_nearby'>
  <view class='{{flag==0?button:button}}' id='0' bindtap="switTo">特约商家</view>
  <image src='{{denglu}}' class='picture' hidden="{{flag==0?false:true}}"></image>
  </view>
  <view class='frame_nearbyB'>
  <view class='{{flag==1?button:button}}' id='1' bindtap="switTo">合作单位</view>
  <image src='{{denglu}}' class='picture' hidden="{{flag==1?false:true}}"></image>
  </view>
  <view class='frame_nearbyB'>
  <view class='{{flag==2?button:button}}' id='2' bindtap="switTo">传播大使</view>
  <image src='{{denglu}}' class='picture' hidden="{{flag==2?false:true}}"></image>
  </view>
</view>
<!-- 主体部件 -->
<block wx:if="{{flag == 0||flag == 1}}">
<scroll-view scroll-y="true" style="height:1050rpx;">
<view wx:for="{{shopList}}" wx:key="id">
<view class='item' id="{{index}}" >
    <image src="{{shopList[index].shopPic[0]}}" class='item_picture'></image>
    
    <view class='framebig'>
      <view class='frame_name_lable'>
        <view class='frame_name_lable'>
          <view class='name'>
             {{shopList[index].shopName}}
          </view>

        </view>
      
      </view>
      <view class='classification'>{{shopList[index].businessName}}</view>
       <view class='detailedAddress'>
           {{shopList[index].shopAddress}}
      </view>
    </view>  
</view>
</view>
</scroll-view>
</block>

<!-- 传播大使 -->
<block wx:elif="{{flag == 2}}">
<view wx:for = "{{data}}" wx:key='id'>
<view wx:for = "data[index].shopPic"wx:key='id'>
  <image src="{{item}}" class='picture_Ambassador' id="{{index}}"></image>
</view>
</view>
</block>