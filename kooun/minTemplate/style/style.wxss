.footer {
    height: 94rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    border-top: 1px solid #e5e5e5;
    display: flex;
    align-items: center;
    background-color: #fff;
    z-index: 88;
}

/*空白页提示*/
.blankpage {
    text-align: center;
    margin-top: 35%;
}
.blankpage image {
    width: 350rpx;
    height: 240rpx;
}
.blankpage .tip {
    font-size: 34rpx;
    color: #909090;
}


/*scroll-x*/
.scrollx_box {
    display: flex;
    white-space: nowrap;
}
.scrollx_item:nth-child(1) {
    margin-left: 26rpx;
}
.scrollx_item {
    width: 300rpx;
    height: 120rpx;
    font-size: 28rpx;
    padding: 16rpx;
    margin-right: 26rpx;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    /*width: 210rpx;*/
    /*height: 250rpx;*/
    border-radius: 10rpx;
    /*background-color: #fff;*/
    text-align: center;

    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.scrollx_item_shadow {
    box-shadow:1px 1px 10px 2px #e3e3e3;
}
.card_r {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    white-space: normal;
    text-align: left;
}


.line_clamp_2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}


.img_box {
    display: flex;
    align-items: center;
}
.img_box image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 16rpx;
}


