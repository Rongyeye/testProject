
/*item*/
.item {
    font-size: 28rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    padding: 0 20rpx;
    border-bottom: 1px solid #e5e5e5;
    box-sizing: border-box;
}
.item_content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.item:nth-last-child(1) {
    border-bottom: none;
}
.item_img {
    margin-right: 20rpx;
    width: 48rpx;
    height: 48rpx;
    vertical-align: middle;
}
.item_after {
    margin-right: 10rpx;
    /*color: #909090;*/
    font-size: 28rpx;
    width: 400rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    display: inline-block;
    vertical-align:middle;
    text-align:right;
}
.icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    display: inline-block;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
}
